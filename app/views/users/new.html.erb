<h1 class="d-flex justify-content-center text-warning">Create your count</h1>
<div class="justify-content-center d-flex p-2 mt-3 text-dark">
<%= simple_form_for(@user) do |f| %>
  <%= f.input :name %>
  <%= f.input :email %>
  <%= f.input :password %>
  <%= f.input :phone_number %>
  <%= f.input :description %>

  <%= f.button :submit, class: "btn btn-sucess btn-sm"%>
<% end %>
</div>
