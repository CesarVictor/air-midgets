
    <div class="row">
      <div class="m-5 col-5">
        <h2><p><%= @user.name %></p></h2>
        <img class="picture"src="https://kitt.lewagon.com/placeholder/users/krokrob" />
        <p>My email: <%= @user.email %></p>
        <p> My phone_number: <%= @user.phone_number %> </p>
        <p> My bio: <%= @user.description %></p>
      </div>
      <div class="container d-flex m-5 col-7">
      <h3>Your midgets</h3>
        <% Midget.where(user_id: current_user.id).each do |midget| %>
          <div class="card-trip">
            <img src="https://fr.web.img6.acsta.net/pictures/20/03/02/15/47/5009987.jpg" />
            <div class="card-trip-infos">
              <div>
                <h2><%= midget.name %></h2>
                <p><%= midget.speciality %></p>
              </div>
              <h2 class="card-trip-pricing"><%= link_to midget.price, midget %></h2>
              <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
            </div>
          </div>
        <% end %>
      </div>
    </div>
