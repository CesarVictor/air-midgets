
<div class="container">
  <div class="form-wrapper bg-transparent text-white" style="width: 400px; margin: 0 auto;">
    <h2>Reservation</h2>
      <div class="card bg-transparent text-white">
          <%= simple_form_for [@midget, @reservation], method: :post do |f| %>
          <div class="bg-transparent text-white">
            <%= f.input :start_date, as: :string, required: false, input_html: {class: "datepicker"} %>
            <%= f.input :end_date, as: :string, required: false, input_html: {class: "datepicker"} %>
            <%= f.button :submit, "Rent", class: "btn btn-warning" %>
          <% end %>
          </div>
      </div>
  </div>
</div>
