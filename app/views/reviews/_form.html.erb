<%= simple_form_for([ @midget, Review.new ],
                      data: { insert_in_list_target: "form",
                              action: "submit->insert-in-list#send" }) do |f| %>
    <%= f.input :comment, as: :text %>
    <%= f.input :rating, as: :integer %>
    <% if policy(Review).create? %>
      <%= f.button :submit %>
    <% end %>
  <% end %>
