<%= simple_form_for(@midget) do |f| %>
  <form class="row g-3">
     <div class="form-group mt-2">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group mt-2">
      <%= f.label :speciality %>
      <%= f.text_field :speciality, class: 'form-control' %>
    </div>
    <div class="form-group mt-2">
      <%= f.label :price %>
      <%= f.text_field :price, class: 'form-control' %>
    </div>
    <div class="form-group mt-2">
      <%= f.label :city %>
      <%= f.text_field :city, class: 'form-control' %>
    </div>
    <div class="form-group mt-2">
      <%= f.label :description %>
      <%= f.text_area :description, class: 'form-control' %>
    </div>
    <div class="form-group mt-2">
      <%= f.input :photo, as: :file, class: 'form-control' %>
    </div>
    <%= f.submit class: 'btn btn-warning btn-sm' %>
  </form>
<% end %>
