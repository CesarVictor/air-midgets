<div class="container">
  <div class="main-image">
    <img class="midget-picture" src="https://fr.web.img6.acsta.net/pictures/20/03/02/15/47/5009987.jpg" />
  </div>
  <div class="description-price">
    <div class="description">
      <h3><%= @midget.name %></h3>
      <p>specialité: <%= @midget.speciality %></p>
      <p><%= @midget.city %></p>
      <p><%= @midget.description %></p>
    </div>
    <div class="details">
      <div class="price">
        <p><%= @midget.price %>€/jour</p>
      </div>
        <h3>Make a reservation</h3>
        <%= render partial: 'reservations/new', locals: { midget: @midget, reservation: @reservation } %>
    </div>
  </div>
</div>
