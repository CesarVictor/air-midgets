<div class="container">
  <div class="main-image">
    <%= cl_image_tag @midget.photo.key, height: 200, width: 200, crop: :fill %>
  </div>
  <div class="description-price">
    <div class="description">
      <h3><%= @midget.name %></h3>
      <p>specialité: <%= @midget.speciality %></p>
      <p><%= @midget.city %></p>
      <p><%= @midget.description %></p>
    </div>
    <div class="details">
      <div class="price">
        <p><%= @midget.price %>€/jour</p>
      </div>
      <% if policy(@midget).destroy? %>
      <%= link_to "Remove", midget_path(@midget), method: :delete, data: { confirm: "Are you sure?"}  %>
      <% end %>
        <%= link_to new_reservation_path(midget_id: @midget.id) do%>
        <button type="button" class="btn btn-outline-secondary">New reservation</button>
        <% end %>
        <h3>Make a reservation</h3>
        <%= render partial: 'reservations/new', locals: { midget: @midget, reservation: @reservation } %>
    </div>
  </div>
</div>
