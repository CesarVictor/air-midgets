<div>
  <%= form_tag midgets_path, method: :get do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find a midget"
    %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>
</div>

  <div class="row m-5">
    <div class="col-12 col-md-7">
    <div class="row">
      <% @midgets.each do |midget| %>
        <div class="col-12 col-md-4">
          <div class="card-trip my-3">
            <%= cl_image_tag midget.photo.key, height: 200, width: 200, crop: :fill %>
            <%= link_to midget_path(midget) do %>
              <div class="card-trip-infos">
                <div>
                  <h2><%= midget.name %></h2>
                  <p><%= midget.speciality %></p>
                </div>
                <h2 class="card-trip-pricing"><%= midget.price %></h2>
                <%= cl_image_tag midget.user.photo.key, height: 50, width: 40, crop: :fill, class: "card-trip-user avatar-bordered" %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
    </div>
    <div class="col-12 col-md-5 mt-3">
      <div style="width: 100%; height: 600px;"
        data-controller="mapbox"
        data-mapbox-markers-value="<%= @markers.to_json %>"
        data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
